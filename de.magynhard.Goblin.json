{
  "app-id": "de.magynhard.Goblin",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "run.sh",
  "finish-args": [
    "--socket=wayland",
    "--share=network",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "ruby",
      "config-opts": [
        "--disable-install-doc"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://cache.ruby-lang.org/pub/ruby/3.2/ruby-3.2.6.tar.gz",
          "sha256": "d9cb65ecdf3f18669639f2638b63379ed6fbb17d93ae4e726d4eb2bf68a48370"
        }
      ]
    },
    {
      "name": "bundler",
      "buildsystem": "simple",
      "build-commands": [
        "gem install --local bundler-2.6.2.gem"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://rubygems.org/downloads/bundler-2.6.2.gem",
          "sha256": "4b89756e1b05390ff678491119a10f0973a2045cc9fcb227b02a9396b28f7d74"
        }
      ]
    },
    {
      "name": "run-script",
      "buildsystem": "simple",
      "build-commands": [
        "install -D run.sh ${FLATPAK_DEST}/bin/run.sh",
        "install -D main.rb ${FLATPAK_DEST}/bin/main.rb"
      ],
      "sources": [
        {
          "type": "file",
          "path": "run.sh"
        },
        {
          "type": "file",
          "path": "main.rb"
        }
      ]
    },
    "rubygems.json"
  ]
}